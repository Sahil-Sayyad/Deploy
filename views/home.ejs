<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= title %>
  </title>
  <link rel="icon" type="image/x-icon" href="/images/home/logo.png" />
  <link rel="stylesheet" href="/stylesheets/main.css" />
  <link rel="stylesheet" href="/stylesheets/tailwind.css" />
  <link rel="stylesheet" href="/stylesheets/home.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
</head>

<body>
  <!-- navbar  -->
  <nav class="navBar px-[5%]">
    <div class="topnavbar">
      <div class="category">
        <button onclick="onButtonChange('men')" id="men" class="gender">
          <a href="/">MAN</a>
        </button>
        <button onclick="onButtonChange('women')" id="women" class="gender">
          <a href="/women"> WOMEN </a>
        </button>
      </div>
    </div>

    <div class="flex items-center justify-between my-4">
      <div class="relative cursor-pointer bg-transparent z-10 text-white">
        <div
          class="relative flex flex-col justify-center z-10 pb-1 pr-3 font-noto font-semibold text-2xl border-b-4 border-r-4 rounded-xl">
          <h1>Anime</h1>
          <h1 class="text-secondary">. Aura</h1>
        </div>

        <div class="blob absolute top-0 left-0">
          <div
            class="absolute blur-xl top-0 -left-10 w-12 h-12 mix-blend-multiply bg-teal-500 opacity-80 rounded-full animate-blob delay-0">
          </div>
          <div
            class="absolute blur-xl top-0 left-20 w-12 h-12 mix-blend-multiply bg-gray-200 opacity-80 rounded-full animate-blob delay-5000">
          </div>
          <div
            class="absolute blur-xl top-10 left-5 w-12 h-12 mix-blend-multiply bg-secondary opacity-90 rounded-full animate-blob delay-2000">
          </div>
        </div>
      </div>

      <div class="navLink text-dimWhite">
        <div class="link">
          <a class="active" href="/">Home</a>
          <a class="" href="/about">About</a>
          <a class="" href="/profile">
            <ion-icon name="person-outline" />
          </a>
          <a class="" href="/product/cart">
            <ion-icon name="bag-outline" />
          </a>
        </div>
      </div>
    </div>
  </nav>

  <main class="bg-primary-color">
    <!-- carousel container relative to all of them -->
    <div class="carousel">

      <div class="list">

        <div class="item">
          <img src="/images/slider/1.webp" alt="" />
        </div>
        <div class="item">
          <img src="/images/slider/2.webp" alt="" />
        </div>
        <div class="item">
          <img src="/images/slider/3.webp" alt="" />
        </div>
        <div class="item">
          <img src="/images/slider/4.webp" alt="" />
        </div>
        <div class="item">
          <img src="/images/slider/5.webp" alt="" />
        </div>
        <div class="item">
          <img src="/images/slider/6.png" alt="" />
        </div>
        <div class="item">
          <img src="/images/slider/7.png" alt="" />
        </div>
        <div class="item">
          <img src="/images/slider/8.webp" alt="" />
        </div>

      </div>

      <!-- thumnail -->

      <div class="thumbnail">

        <img src="/images/slider/2.webp" alt="" class="item" />
        <img src="/images/slider/3.webp" alt="" class="item" />
        <img src="/images/slider/4.webp" alt="" class="item" />
        <img src="/images/slider/5.webp" alt="" class="item" />
        <img src="/images/slider/6.png" alt="" class="item" />
        <img src="/images/slider/7.png" alt="" class="item" />
        <img src="/images/slider/8.webp" alt="" class="item" />
        <img src="/images/slider/1.webp" alt="" class="item" />

      </div>

      <!-- animation timer -->
      <div class="timer"></div>

      <!-- arrows for slider -->
      <div class="arrows">

        <button id="prev" class=" flex items-center justify-center">
          <ion-icon name="chevron-back-outline"></ion-icon>
        </button>

        <button id="next" class=" flex items-center justify-center">
          <ion-icon name="chevron-forward-outline"></ion-icon>
        </button>

      </div>

    </div>
    </div>
    <!-- product addition karra hu -->

    <h1 id="headline"
      class="w-fit text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 from-30% to-lime-300 text-3xl font-semibold mt-16 mb-10">
      Men's Clothing from Anime Aura
    </h1>

    <div id="pro-wrapper" class="pro-wrapper flex flex-wrap justify-evenly w-full gap-14">
      <% products.forEach(product=> {%>
        <% if(product.shoppingCategory==='Men' ) {%>
          <a href="/product/show/productId=<%=product.id%>">
            <div class="pro-card w-[290px] h-[400px] bg-gray-100 p-3 rounded-md">
              <img class="h-[290px] rounded-xl w-full shadow-lg shadow-gray-400 object-cover" src="<%= product.image %>"
                alt="pro1" />
              <div class="mt-4">
                <h1 class="text-zinc-800 font-semibold">
                  <%= product.title %>
                </h1>

                <h2 class="text-gray-500">
                  <%= product.category %>
                </h2>
                <span class="text-teal-600 text-xl font-bold"><b class="text-gray-600">Rs. </b>
                  <%= product.price %>
                </span>
              </div>
            </div>
          </a>
          <%}%>
            <%});%>
    </div>
  </main>

  <!-- product addition khatam ho gaya -->
</body>
<!-- javascripts -->
<script src="/javascripts/home.js"></script>
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

</html>
