<html>
  <head>
    <title>
        <%= title %>
      </title>
      <link rel="icon" type="image/x-icon" href="/images/home/logo.png">
      <link rel="stylesheet" href="/stylesheets/sign_up_sign_in.css" />
      <link rel="stylesheet" href="/stylesheets/main.css" />
      <link rel="stylesheet" href="/stylesheets/tailwind.css" />
      <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
  </head>

  <body>
    <nav class="navBar px-[5%]">
      <div class="flex items-center justify-between my-4">
        <div class="relative cursor-pointer bg-transparent z-10 text-white">
          <div
            class="relative flex flex-col justify-center z-10 pb-1 pr-3 font-noto font-semibold text-2xl border-b-4 border-r-4 rounded-xl"
          >
            <h1>Anime</h1>
            <h1 class="text-secondary">. Aura</h1>
          </div>

          <div class="blob absolute top-0 left-0">
            <div
              class="absolute blur-xl top-0 -left-10 w-12 h-12 mix-blend-multiply bg-teal-500 opacity-80 rounded-full animate-blob delay-0"
            ></div>
            <div
              class="absolute blur-xl top-0 left-20 w-12 h-12 mix-blend-multiply bg-gray-200 opacity-80 rounded-full animate-blob delay-5000"
            ></div>
            <div
              class="absolute blur-xl top-10 left-5 w-12 h-12 mix-blend-multiply bg-secondary opacity-90 rounded-full animate-blob delay-2000"
            ></div>
          </div>
        </div>

        <div class="navLink text-dimWhite">
          <div class="link">
            <a class="" href="/">Home</a>
            <a class="" href="/about">About</a>
            <a class="active" href="/profile">
              <ion-icon name="person-outline" />
            </a>
            <a class="" href="/product/cart">
              <ion-icon name="bag-outline" />
            </a>
          </div>
        </div>
      </div>
    </nav>

    <main class="bglogin h-[calc(100vh-104px)] px-2 sm:px-[5%]">
      <div class="flex w-full h-full justify-center items-center">
        <!-- center box -->
        <div
          class="w-full flex items-center sm:max-w-[800px] h-[500px] bg-blackAplha600 rounded-2xl overflow-hidden"
        >
          <!-- logo -->
          <div
            class="w-1/3 h-full hidden sm:flex items-center justify-center bg-zinc-950"
          >
            <div
              class="flex flex-col justify-center text-white w-fit h-fit pb-1 pr-3 font-poppins font-medium text-5xl border-b-4 border-r-4 rounded-xl"
            >
              <h1>Anime</h1>
              <h1 class="text-secondary">. Aura</h1>
            </div>
          </div>

          <!-- logo-end -->

          <!-- login-box -->
          <div
            class="w-full sm:w-2/3 h-full px-6 py-8 sm:px-8 font-poppins font-medium text-white"
          >
            <div class="flex flex-col gap-2">
              <h1
                class="w-fit text-[2.5rem] text-transparent bg-clip-text bg-gradient-to-r from-indigo-500 to-lime-400 font-comfortaa font-extrabold"
              >
                Login
              </h1>

              <form action="/user/create-session" method="post">
                <div class="input-group">
                  <label>Username</label>
                  <input type="email" placeholder="Enter Email" name="email" required />
                </div>
                <div class="input-group">
                  <label>Password</label>
                  <input
                    type="password"
                    placeholder="Enter Password"
                    required
                    name="password"
                  />
                </div>
                <button
                  class="bg-indigo-600 hover:bg-indigo-700 py-3 mt-4 px-6 rounded-md"
                  type="submit"
                >
                  PROCEED &#10132;
                </button>
              </form>

              <div class="mt-2 text-lg font-comfortaa font-extrabold">
                Dont have an account ?
                <a
                  class="text-indigo-400 underline decoration-2 underline-offset-2 hover:text-sky-200"
                  href="/user/sign-up"
                  >Register</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script>
      <% if(flash.success && flash.success.length > 0){%>
                  new Noty({
                  theme:'sunset',
                  text: '<h3><%= flash.success%></h3>',
                  type:'success',
                  layout:'topRight',
                  timeout:3000
              }).show();
              <% } %>

              <% if(flash.error && flash.error.length > 0){%>
                new Noty({
                  theme:'sunset',
                  text: '<%= flash.error%>',
                  type:'error',
                  layout:'topRight',
                  timeout:3000
                }).show();
              <% } %>
    </script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
  </body>
</html>
